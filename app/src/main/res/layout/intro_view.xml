<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llintroview"
    android:visibility="gone"
    android:layout_below="@+id/app_bar"
    android:layout_marginTop="150dp">

    <com.airbnb.lottie.LottieAnimationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/network_error_anim"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/tvNetError"
        android:visibility="visible"

        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"
        app:lottie_fileName="emoji_wink.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tvNetError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center|center_vertical"/>
</RelativeLayout>